<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    android:gravity="top"
    android:orientation="horizontal" >
    
      <RelativeLayout 
      	android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:gravity="start">
   
		    <ImageView 
		        android:id="@+id/imagen"        
		        android:contentDescription="@+string/ImagenDeReferencia"
		        android:layout_width="75dp"
		        android:layout_height="75dp"
		        android:layout_marginStart="0dp"
		        android:layout_marginLeft="0dp" 
		        android:layout_marginTop="1dp"
		        android:layout_marginBottom="1dp"       
		        android:layout_gravity="start|center_horizontal" />
		    
		    <ImageView
		        android:id="@+id/recuadro"
		        android:layout_width="75dp"
		        android:layout_height="75dp"
		        android:layout_gravity="start|center_horizontal"
		        android:layout_marginLeft="0dp"
		        android:layout_marginStart="0dp"
		        android:layout_marginTop="1dp"
		        android:contentDescription="@+string/RecuadroDeReferencia"
		        android:src="@drawable/ultima" />

    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/lachout"
        android:layout_width="0dp"
        android:nextFocusRight="@+id/visto"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:background="#FFFF"
        android:orientation="vertical"
        android:layout_weight="3" >
				  
	   <TextView
	       
	       android:id="@+id/asunto"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="15dip"
	       android:layout_marginLeft="0dp"
	       android:layout_marginStart="0dp"
	       android:textSize="18sp"
	       android:ellipsize="end"
    	   android:singleLine="true"/>
	
		<TextView
	       android:id="@+id/descripcion"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="5dip"
	       android:layout_marginLeft="0dp"
	       android:layout_marginStart="10dp"
	       android:textSize="12sp"
	       android:textColor="#343434"
	       android:ellipsize="end"
   		   android:singleLine="true" />
		
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/visto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="25dp" >
   
	    <ImageView
	        android:id="@+id/asistido"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_marginEnd="0dp"
	        android:layout_marginRight="0dp"
	        android:adjustViewBounds="true"
	        android:baselineAlignBottom="true"
	        android:contentDescription="@+string/asistido"
	        android:src="@drawable/check"
	        android:visibility="invisible" />
    
    </RelativeLayout>
    
</LinearLayout>